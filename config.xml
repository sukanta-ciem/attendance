<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Attendance</name>

  <description>
      Aris Bionaturals employee attendance app.
  </description>
    
  <platform name="android">
        <icon src="res/icon-36x36.png" density="ldpi" />
        <icon src="res/icon-48x48.png" density="mdpi" />
        <icon src="res/icon-72x72.png" density="hdpi" />
        <icon src="res/icon-96x96.png" density="xhdpi" />
        <icon src="res/icon-144x144.png" density="xxhdpi" />
        <icon src="res/icon-196x196.png" density="xxxhdpi" />
    </platform>

  <author href="https://build.phonegap.com" email="support@phonegap.com">
      Sukanta Das Bairagya
  </author>
    
  <preference name="phonegap-version" value="cli-7.1.0" />

  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-camera" />
  <plugin name="cordova-plugin-sim" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <plugin name="cordova-plugin-geolocation" />
  <access origin="*" subdomains="true" />
  <allow-navigation href="*" />
    
  <feature name="Geolocation">
    <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
  </feature>

</widget>
